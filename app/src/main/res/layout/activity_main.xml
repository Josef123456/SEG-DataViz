<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
            android:id="@+id/investor_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="60dp"
            android:layout_alignParentStart="true"
            android:text="@string/investor_App"
            />
    <Button
            android:id="@+id/button_investor"
            style="@style/Buttons"
            android:layout_below="@id/investor_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:text="@string/investing"
            android:drawableLeft="@drawable/ic_launcher"/>
    <Button
            android:id="@+id/button_student"
            android:layout_width="match_parent"
            style="@style/Buttons"
            android:layout_below="@+id/button_investor"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/student"
            android:drawableLeft="@drawable/ic_launcher"/>
    <Button
            android:layout_width="match_parent"
            style="@style/Buttons"
            android:layout_below="@id/button_student"
            android:id="@+id/button_other"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:text="@string/other"
            android:drawableLeft="@drawable/ic_launcher"/>

</RelativeLayout>