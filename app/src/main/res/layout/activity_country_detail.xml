<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/newyork"
    android:orientation="vertical"
    tools:context="com.team1_k.project.seg.dataviz.activities.country.CountryDetailActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textSize="40dp"
        android:textColor="#FFFFE0"
        android:gravity="center_horizontal"
        android:id="@+id/countryName"
        android:paddingBottom="10dp"
        android:lineSpacingExtra="30dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/countryDataPointListView"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        tools:listitem="@layout/list_row_country_detail_data_point" />

</LinearLayout>
